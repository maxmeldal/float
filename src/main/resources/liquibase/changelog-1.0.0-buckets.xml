<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
    <!-- This changelog primarily handles buckets setup -->

    <changeSet id="1.0.0:float:buckets_table" author="YBC">
        <createTable tableName="buckets">
            <column name="id" type="text">
                <constraints unique="true" primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="project_id" type="text">
                <constraints nullable="false" foreignKeyName="fk_project_id" references="projects(id)" deleteCascade="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
